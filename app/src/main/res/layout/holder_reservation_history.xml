<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reservationTicket"
            type="woowacourse.movie.data.model.ReservationTicket" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/holder_reservation_history_selector">

        <TextView
            android:id="@+id/tv_reservation_history_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@{String.valueOf(reservationTicket.date)}"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@id/tv_reservation_history_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2021-01-01" />

        <TextView
            android:id="@+id/tv_reservation_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{String.valueOf(reservationTicket.time)}"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_date"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_history_date"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_date"
            tools:text="17:00" />

        <TextView
            android:id="@+id/tv_reservation_history_theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{reservationTicket.theater.name}"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_time"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_history_time"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_time"
            tools:text="선릉 극장" />

        <TextView
            android:id="@+id/tv_reservation_history_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:text="@{reservationTicket.screenData.movieData.title}"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_history_date"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_history_date"
            tools:text="해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

