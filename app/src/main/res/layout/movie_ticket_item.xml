<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movieTicket"
            type="woowacourse.movie.domain.model.movieticket.MovieTicket" />

        <variable
            name="onMovieTicketItemClickListener"
            type="woowacourse.movie.presentation.main.history.adapter.OnMovieTicketItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movieTicket_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:onClick="@{()->onMovieTicketItemClickListener.onClick(movieTicket.id)}">

        <TextView
            android:id="@+id/screening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@{movieTicket.screeningDate}"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024.03.02" />

        <View
            android:id="@+id/divider1"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_marginStart="3dp"
            android:background="@color/gray_200"
            app:layout_constraintBottom_toBottomOf="@+id/screening_date"
            app:layout_constraintStart_toEndOf="@+id/screening_date"
            app:layout_constraintTop_toTopOf="@+id/screening_date" />


        <TextView
            android:id="@+id/screeningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@{movieTicket.screeningTime}"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/screening_date"
            app:layout_constraintStart_toStartOf="@+id/divider1"
            app:layout_constraintTop_toTopOf="@+id/screening_date"
            tools:text="17:00" />

        <View
            android:id="@+id/divider2"
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_marginStart="3dp"
            android:background="@color/gray_200"
            app:layout_constraintBottom_toBottomOf="@+id/screeningTime"
            app:layout_constraintStart_toEndOf="@+id/screeningTime"
            app:layout_constraintTop_toTopOf="@+id/screeningTime" />


        <TextView
            android:id="@+id/theater_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@{movieTicket.theaterName}"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/screening_date"
            app:layout_constraintStart_toStartOf="@+id/divider2"
            app:layout_constraintTop_toTopOf="@+id/screening_date"
            tools:text="선릉 극장" />


        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="@{movieTicket.movieTitle}"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/screening_date"
            app:layout_constraintTop_toBottomOf="@+id/screening_date"
            tools:text="해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
