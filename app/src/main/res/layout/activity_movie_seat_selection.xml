<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movieTitle"
            type="String" />

        <variable
            name="movieSelectedSeats"
            type="woowacourse.movie.model.MovieSelectedSeats" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.seat.MovieSeatSelectionActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#EAEAEA"
            app:layout_constraintBottom_toTopOf="@id/bottom_layout"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_screen"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:background="#494949"
                    android:gravity="center"
                    android:text="@string/screen"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <TableLayout
                    android:id="@+id/table_seat"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginHorizontal="34dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginBottom="96dp"
                    android:background="@color/white"
                    android:stretchColumns="*"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_screen">

                    <TableRow
                        android:id="@+id/row_A"
                        android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row_B"
                        android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row_C"
                        android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row_D"
                        android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/row_E"
                        android:layout_weight="1">

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                        <TextView style="@style/Seat" />

                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="@{movieTitle}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="해리 포터와 마법사의 돌" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="@{@string/price(movieSelectedSeats.totalPrice())}"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
                tools:text="0원" />

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="90dp"
                android:layout_height="0dp"
                android:background="@drawable/rectangle_button"
                android:enabled="@{movieSelectedSeats.isSelectionComplete()}"
                android:text="@string/complete_button"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
