<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cinema"
            type="woowacourse.movie.presentation.model.CinemaModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textCinemaName"
            style="@style/Text_RobotoBoldBLACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="@{cinema.cinemaName}"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="선릉 극장" />


        <TextView
            android:id="@+id/textCinemaTimesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto"
            android:text="@{@string/cinema_times_count(cinema.movieTimes.size())}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textCinemaName"
            app:layout_constraintTop_toBottomOf="@id/textCinemaName"
            tools:text="3개의 상영 시간" />


        <ImageView
            android:id="@+id/imageCinemaArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginVertical="0dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>