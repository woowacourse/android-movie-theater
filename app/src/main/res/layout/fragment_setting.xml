<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="woowacourse.app.ui.main.SettingFragment">

    <TextView
        android:id="@+id/textSettingPushAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/receive_push_alarm"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" />

    <Switch
        android:id="@+id/switchPushAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textSettingPushAlarm"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/textSettingPushDenied" />

    <TextView
        android:id="@+id/textSettingPushDenied"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:text="@string/push_alarm_denied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textSettingPushAlarm"
        android:layout_marginTop="9dp" />

</androidx.constraintlayout.widget.ConstraintLayout>