<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="presenter"
            type="woowacourse.movie.presentation.ui.main.setting.SettingContract.Presenter" />

        <variable
            name="mode"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.main.setting.SettingFragment">

        <include
            android:id="@+id/alarm_settings_new_push"
            layout="@layout/include_alarm_setting_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alarm_settings_new_push_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:checked="@{mode}"
            android:onClick="@{() -> presenter.changeNotificationMode(mode)}"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_settings_new_push"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/alarm_settings_new_push"
            app:thumbTint="@color/purple"
            app:trackTint="@color/purple_200" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
