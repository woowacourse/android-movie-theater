<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.main.fragments.setting.SettingFragment">

    <TextView
        android:id="@+id/notification_push_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="@string/notification_push_title" />

    <TextView
        android:id="@+id/notification_push_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/notification_push_switch"
        app:layout_constraintTop_toBottomOf="@+id/notification_push_title_tv"
        app:layout_constraintStart_toStartOf="@+id/notification_push_title_tv"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="12dp"
        android:textSize="12sp"
        android:textColor="@color/unselected_menu_color"
        android:text="@string/notification_push_description" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/notification_push_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/switch_track_color"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification_push_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/notification_push_desc_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
