<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            alias="DateExtension"
            type="woowacourse.movie.presentation.util.DateExtensionKt" />
        <variable
            name="ticket"
            type="woowacourse.movie.presentation.model.TicketModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="2024. 3. 2 | 17:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/textBookedTicketsDateTime"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            tools:text="해리 포터와 마법사의 돌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text_RobotoBoldBLACK"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/textBookedTicketsDateTime"
            android:id="@+id/textBookedTicketsTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            tools:layout_editor_absoluteX="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textBookedTicketsDateTime" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_100"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
