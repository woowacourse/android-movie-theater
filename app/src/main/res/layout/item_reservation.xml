<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reservations"
            type="woowacourse.movie.data.model.ReservationItemModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:padding="12dp"
        android:orientation="vertical"
        android:onClick="@{()->reservations.onClick.invoke(reservations.reservationUiModel)}"
        android:background="?attr/selectableItemBackground">


        <TextView
            android:id="@+id/item_reservation_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{reservations.reservationUiModel.tickets.list.get(0).date.toString()}"
            tools:text="2024. 3. 2 | 17:00" />


        <TextView
            android:id="@+id/item_reservation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{reservations.reservationUiModel.movie.title}"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="해리 포터와 마법사의 돌" />
    </LinearLayout>

</layout>
