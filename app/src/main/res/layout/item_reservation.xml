<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="woowacourse.movie.presentation.homefragments.reservationList.ReservationListClickListener" />

        <variable
            name="reservationItem"
            type="woowacourse.movie.presentation.homefragments.reservationList.uiModel.ReservationItemUiModel" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:onClick="@{() -> listener.reservationItemClickListener(reservationItem.id)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_reservation_screen_date_textview"
            style="@style/reservationItemStyle"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:text="@{reservationItem.screenDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024.3.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="|"
            app:layout_constraintBaseline_toBaselineOf="@id/item_reservation_screen_date_textview"
            app:layout_constraintStart_toEndOf="@id/item_reservation_screen_date_textview" />

        <TextView
            android:id="@+id/item_reservation_screen_time_textview"
            style="@style/reservationItemStyle"
            android:text="@{reservationItem.screenTime}"
            android:layout_marginStart="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/item_reservation_screen_date_textview"
            app:layout_constraintStart_toEndOf="@id/item_reservation_screen_date_textview"
            tools:text="17:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="|"
            app:layout_constraintBaseline_toBaselineOf="@id/item_reservation_screen_time_textview"
            app:layout_constraintStart_toEndOf="@id/item_reservation_screen_time_textview" />

        <TextView
            android:id="@+id/item_reservation_theater_name_textview"
            style="@style/reservationItemStyle"
            android:layout_marginStart="10dp"
            android:text="@{reservationItem.theaterName}"
            app:layout_constraintBaseline_toBaselineOf="@id/item_reservation_screen_date_textview"
            app:layout_constraintStart_toEndOf="@id/item_reservation_screen_time_textview"
            tools:text="선릉" />

        <TextView
            style="@style/reservationItemStyle"
            android:layout_marginStart="2dp"
            android:text="극장"
            app:layout_constraintBaseline_toBaselineOf="@id/item_reservation_screen_date_textview"
            app:layout_constraintStart_toEndOf="@id/item_reservation_theater_name_textview" />

        <TextView
            android:id="@+id/item_reservation_movie_title_textview"
            style="@style/reservationItemStyle"
            android:layout_marginVertical="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@{reservationItem.movieTitle}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_reservation_screen_date_textview"
            app:layout_constraintTop_toBottomOf="@id/item_reservation_screen_date_textview"
            tools:text="해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
