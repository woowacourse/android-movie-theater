<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="java.time.LocalDate" />

        <import type="java.time.LocalTime" />

        <import type="java.util.List" />


        <variable
            name="presenter"
            type="woowacourse.movie.presentation.ui.detail.DetailContract.Presenter" />

        <variable
            name="screen"
            type="woowacourse.movie.domain.model.Screen" />

        <variable
            name="count"
            type="int" />

        <variable
            name="localDates"
            type="List&lt;LocalDate&gt;" />


        <variable
            name="localTimes"
            type="List&lt;LocalTime&gt;" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.detail.DetailActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="match_parent"
                    android:layout_height="341dp"
                    android:scaleType="centerCrop"
                    app:imageResource="@{screen.movie.imageSrc}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/img_poster" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="27dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{screen.movie.title}"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_poster"
                    tools:text="해리 포터와 마법사의 돌" />

                <TextView
                    android:id="@+id/tv_screen_date_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:text="@string/screen_date"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />


                <TextView
                    android:id="@+id/tv_screen_date"
                    endDate="@{screen.movie.endDate}"
                    startDate="@{screen.movie.startDate}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_screen_date_guide"
                    app:layout_constraintStart_toEndOf="@+id/tv_screen_date_guide"
                    app:layout_constraintTop_toTopOf="@+id/tv_screen_date_guide"
                    tools:text="2024.3.1" />

                <TextView
                    android:id="@+id/tv_screen_running_time_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/screen_running_time_date"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_screen_date_guide"
                    app:layout_constraintTop_toBottomOf="@+id/tv_screen_date_guide" />


                <TextView
                    android:id="@+id/tv_screen_running_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/running_time(screen.movie.runningTime)}"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_screen_running_time_guide"
                    app:layout_constraintStart_toEndOf="@+id/tv_screen_running_time_guide"
                    app:layout_constraintTop_toTopOf="@+id/tv_screen_running_time_guide"
                    tools:text="152분" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="19dp"
                    android:text="@{screen.movie.description}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_screen_running_time"
                    tools:text="《해리 포터와 마법사의 돌》은 2001년 J. K. 롤링의 동명 소설을 원작으로 하여 만든, 영국과 미국 합작, 판타지 영화이다.
                해리포터 시리즈 영화 8부작 중 첫 번째에 해당하는 작품이다. 크리스 콜럼버스가 감독을 맡았다." />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Spinner
            android:id="@+id/spinner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginBottom="21dp"
            android:entries="@{localDates}"
            android:onItemSelected="@{(parent, view, position, id) -> presenter.selectDate((LocalDate) parent.getItemAtPosition(position))}"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:entries="@{localTimes}"
            android:forceHasOverlappingRendering="false"
            android:onItemSelected="@{(parent, view, position, id) -> presenter.selectTime((LocalTime) parent.getItemAtPosition(position))}"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/spinner_date" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:onClick="@{() -> presenter.minusTicket()}"
            android:text="@string/minus"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_count" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@{String.valueOf(count)}"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_select_seat"
            app:layout_constraintEnd_toStartOf="@+id/btn_plus"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            tools:text="1" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:onClick="@{() -> presenter.plusTicket()}"
            android:text="@string/plus"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_count" />


        <Button
            android:id="@+id/btn_select_seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="@{()-> presenter.selectSeat()}"
            android:text="@string/select_seat"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

