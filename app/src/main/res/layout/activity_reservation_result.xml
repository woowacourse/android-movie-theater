<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="woowacourse.movie.data.model.TicketFormatter" />

        <variable
            name="tickets"
            type="woowacourse.movie.data.model.uimodel.TicketsUIModel" />

        <variable
            name="movie"
            type="woowacourse.movie.data.model.uimodel.MovieUIModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.reservationresult.ReservationResultActivity">

        <TextView
            android:id="@+id/movie_reservation_result_information"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:background="@color/reservation_result_background"
            android:gravity="bottom|center"
            android:paddingBottom="7dp"
            android:text="@string/movie_reservation_result_information"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_reservation_result_title"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{movie.title}"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_information"
            tools:text="해리 포터와 마법사의 돌" />

        <TextView
            android:id="@+id/movie_reservation_result_date"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{TicketFormatter.INSTANCE.getDateTime(tickets)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_title"
            tools:text="2024.3.1 17:00" />

        <TextView
            android:id="@+id/movie_reservation_result_people_count"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@{@string/reservation_seat_count_detail(tickets.list.size(), TicketFormatter.INSTANCE.getSeats(tickets), tickets.list.get(0).theater.name)}"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_date"
            tools:text="일반 2명 | A2, A3" />

        <TextView
            android:id="@+id/movie_reservation_result_price"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="@{@string/reservation_price(TicketFormatter.INSTANCE.getPrice(tickets))}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_people_count"
            tools:text="25,000원 (현장결제)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
