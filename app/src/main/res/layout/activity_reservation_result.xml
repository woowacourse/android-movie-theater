<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="woowacourse.movie.presentation.uimodel.MovieTicketUiModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reservation_result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.reservation.result.ReservationResultActivity">

        <TextView
            android:id="@+id/reservation_cancel_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_114"
            android:background="@color/purple_300"
            android:gravity="bottom"
            android:paddingBottom="@dimen/size_10"
            android:text="@string/reservation_cancel_info"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_36"
            android:gravity="center"
            android:text="@{data.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/size_25"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservation_cancel_info" />

        <TextView
            android:id="@+id/screeningDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_76"
            android:layout_marginTop="@dimen/size_36"
            android:gravity="center"
            android:text="@{data.screeningDate}"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/screeningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{data.screeningTime(context)}"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/screeningDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/screeningDate"
            app:layout_constraintTop_toTopOf="@+id/screeningDate" />

        <TextView
            android:id="@+id/reservationInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_32"
            android:layout_marginTop="@dimen/size_80"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{data.reservationInfo(context)}"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/screeningDate" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_32"
            android:gravity="center"
            android:text="@{data.totalPrice(context)}"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservationInfo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
