<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/sel_reservation_list"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_reservation_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/divider_reservation_list_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/roboto"
            tools:text="2024.3.2" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_reservation_list_date"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_list_date"
            app:layout_constraintEnd_toStartOf="@id/tv_reservation_list_time"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_list_date"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_list_date"/>

        <TextView
            android:id="@+id/tv_reservation_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_list_date"
            app:layout_constraintStart_toEndOf="@id/divider_reservation_list_date"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_list_date"
            tools:text="17:00" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_reservation_list_time"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_list_time"
            app:layout_constraintEnd_toStartOf="@id/tv_reservation_list_theater_name"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_list_time"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_list_time" />


        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_reservation_list_theater_name"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_list_date"
            app:layout_constraintStart_toEndOf="@id/divider_reservation_list_time"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_list_date"
            tools:text="선릉 극장" />

        <TextView
            android:id="@+id/tv_reservation_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="해리 포터와 마법사의 돌"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="13dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_list_date"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_list_date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
