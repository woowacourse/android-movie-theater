<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movies"
            type="woowacourse.movie.data.model.itemmodel.MovieItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_movie_poster"
            android:layout_width="0dp"
            android:layout_height="108dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_harrypotter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{movies.movie.title}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/item_movie_poster"
            app:layout_constraintTop_toTopOf="@id/item_movie_poster"
            tools:text="해리포터와 마법사의 돌" />

        <TextView
            android:id="@+id/item_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{@string/movie_date(movies.movie.startDate, movies.movie.endDate)}"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/item_movie_title"
            app:layout_constraintTop_toBottomOf="@id/item_movie_title"
            tools:text="상영일: 2024.3.1" />

        <TextView
            android:id="@+id/item_movie_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/movie_running_time(movies.movie.runningTime)}"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@id/item_movie_title"
            app:layout_constraintTop_toBottomOf="@id/item_movie_date"
            tools:text="러닝타임: 152분" />

        <Button
            android:id="@+id/item_movie_reservation_button"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:onClick="@{()-> movies.onClick.invoke(movies.movie)}"
            android:padding="0dp"
            android:text="@string/item_movie_reservation_button"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>