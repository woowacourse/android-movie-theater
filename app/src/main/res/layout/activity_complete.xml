<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.complete.CompleteActivity">

        <TextView
            android:id="@+id/textCompletedDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/purple_300"
            android:fontFamily="@font/roboto"
            android:gravity="center|bottom"
            android:paddingBottom="14dp"
            android:text="@string/cancel_description"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintDimensionRatio="2.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCompletedTitle"
            style="@style/Text_RobotoBoldBLACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCompletedDescription"
            tools:text="해리 포터와 마법사의 돌" />

        <TextView
            android:id="@+id/textCompletedScreeningDate"
            style="@style/Text_RobotoMediumBLACK_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCompletedTitle"
            tools:text="2024.3.1 17:00" />

        <TextView
            android:id="@+id/textCompletedTicketCount"
            style="@style/Text_RobotoMediumBLACK_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="72dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCompletedScreeningDate"
            tools:text="일반 1명 | B3, D2 | 강남 극장" />

        <TextView
            android:id="@+id/textCompletedPaymentAmount"
            style="@style/Text_RobotoMediumBLACK_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCompletedTicketCount"
            tools:text="13,000원 (현장 결제)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>