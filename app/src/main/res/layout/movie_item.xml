<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="woowacourse.movie.domain.model.home.HomeItem.MovieItem" />

        <variable
            name="on_movie_item_click_listener"
            type="woowacourse.movie.presentation.main.home.adapter.OnMovieItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="76dp"
            android:layout_height="108dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:imageResource="@{movie.posterResourceId}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@{movie.title}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/movie_poster"
            app:layout_constraintTop_toTopOf="@+id/movie_poster"
            tools:text="해리포터와 마법사의 돌" />

        <LinearLayout
            android:id="@+id/movie_screening_date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/movie_title"
            app:layout_constraintTop_toBottomOf="@+id/movie_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:text="@string/screening_date_text"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movie_screening_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:formattedDate="@{movie.firstScreeningDate}"
                tools:text="@string/harry_potter_screening_date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/movie_running_time_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/movie_screening_date_container"
            app:layout_constraintTop_toBottomOf="@+id/movie_screening_date_container">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="4dp"
                android:text="@string/running_time_text"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/movie_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(movie.runningTime)}"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:text="@string/harry_potter_running_time" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minute_text"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/movie_reservation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/reserve_button_text"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            android:onClick="@{() -> on_movie_item_click_listener.onClick(movie.id)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
