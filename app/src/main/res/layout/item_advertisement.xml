<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="advertisement"
            type="woowacourse.movie.data.model.itemmodel.AdvertisementItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/advertisement_image"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:contentDescription="@string/advertisement_content_description"
            android:scaleType="centerCrop"
            android:src="@drawable/advertisement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{()->advertisement.onClick.invoke(advertisement.advertisementUiModel)}"
            tools:src="@drawable/advertisement" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
