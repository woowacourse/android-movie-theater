<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:movie="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movieContent"
            type="woowacourse.movie.model.movie.MovieContent" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="76dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:scaleType="fitStart"
            movie:imgRes="@{movieContent.imageId}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sv_information_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/sv_information_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_reservation"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="@{movieContent.title}"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_screening_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                movie:openingDate="@{movieContent.openingMovieDate}"
                movie:endingDate="@{movieContent.endingMoviesDate}"
                android:gravity="center_vertical"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_running_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:text="@{@string/running_time(movieContent.runningTime)}"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/now_reservation"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sv_information_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
