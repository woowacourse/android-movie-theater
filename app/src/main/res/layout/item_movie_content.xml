<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:movie="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movieContent"
            type="woowacourse.movie.domain.MovieContent" />

        <variable
            name="onClickListener"
            type="woowacourse.movie.ui.home.ReservationButtonClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/poster_image"
            android:layout_width="76dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:scaleType="fitStart"
            movie:drawableResourceId="@{movieContent.imageId}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/info_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/reservation_button"
            app:layout_constraintLeft_toRightOf="@+id/poster_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="@{movieContent.title}"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/screening_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                movie:openingDate="@{movieContent.openingMovieDate}"
                movie:endingDate="@{movieContent.endingMoviesDate}"
                android:gravity="center_vertical"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/running_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="center_vertical"
                android:text="@{@string/home_running_time(movieContent.runningTime)}"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/reservation_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_reservation"
            android:textSize="14sp"
            android:textStyle="bold"
            movie:clickListener="@{onClickListener}"
            movie:movieContentId="@{movieContent.id}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
