<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reservationHistory"
            type="woowacourse.movie.feature.history.ui.ReservationHistoryUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_reservation_history">

        <TextView
            android:id="@+id/tv_screening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black"
            android:text="@{reservationHistory.screeningDate}"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_separator_1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024.3.2" />

        <TextView
            android:id="@+id/tv_separator_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:text="@string/separator"
            android:textColor="@color/gray_300"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_screening_date"
            app:layout_constraintRight_toLeftOf="@+id/tv_screening_time"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_screening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{reservationHistory.screeningTime}"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_separator_1"
            app:layout_constraintRight_toLeftOf="@+id/tv_separator_2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="17:00" />

        <TextView
            android:id="@+id/tv_separator_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:text="@string/separator"
            android:textColor="@color/gray_300"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_screening_time"
            app:layout_constraintRight_toLeftOf="@+id/tv_theater_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_theater_name"
            android:layout_width="0dp"
            android:text="@{@string/theater(reservationHistory.theaterName)}"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_separator_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="선릉 극장" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="13dp"
            android:ellipsize="end"
            android:text="@{reservationHistory.movieTitle}"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_screening_date"
            tools:text="해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
