<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">

    <data>

        <variable
            name="ticket"
            type="woowacourse.movie.model.ticket.Ticket" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_reservation_history_screening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@{String.valueOf(ticket.screeningDateTime.toLocalDate())}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024.3.3" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_reservation_history_date"
            android:layout_width="1dp"
            android:layout_height="0dp"
            style="@style/DividerStyle"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_screening_date" />

        <TextView
            android:id="@+id/tv_reservation_finished_screening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{String.valueOf(ticket.screeningDateTime.toLocalTime())}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintStart_toEndOf="@id/divider_reservation_history_date"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_screening_date"
            tools:text="17:00" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_reservation_history_time"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            app:dividerColor="#D0D0D0"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintStart_toEndOf="@id/tv_reservation_finished_screening_time"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_screening_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{String.valueOf(ticket.theaterName)}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintStart_toEndOf="@id/divider_reservation_history_time"
            app:layout_constraintTop_toTopOf="@id/tv_reservation_history_screening_date"
            tools:text="선릉 극장" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="13dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{String.valueOf(ticket.movieTitle)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_history_screening_date"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_history_screening_date"
            tools:text="해리 포터와 마법사의 돌 해리 포터와 마법사의 돌 해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
