<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="dbTicket"
            type="woowacourse.movie.ticket.model.DbTicket" />
        <variable
            name="reservationOnItemClickListener"
            type="woowacourse.movie.list.adapter.ReservationOnItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/theater_item"
        android:layout_height="66dp"
        android:layout_width="match_parent"
        android:onClick="@{()->reservationOnItemClickListener.onClick(dbTicket.id)}">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/screening_date"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="@{dbTicket.screeningDate}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2024.3.2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:text=" | " />
            <TextView
                android:id="@+id/screening_time"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="@{dbTicket.screeningTime}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="17:00" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:text=" | " />
            <TextView
                android:id="@+id/theater_name"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="@{dbTicket.theaterName}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="선릉 극장" />

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/line1"
            app:layout_constraintTop_toBottomOf="@+id/line1">

            <TextView
                android:id="@+id/screening_times_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@{dbTicket.movieTitle}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/theater_name"
                app:layout_constraintTop_toBottomOf="@id/theater_name"
                tools:text="해리포터와 마법사의 돌" />


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>