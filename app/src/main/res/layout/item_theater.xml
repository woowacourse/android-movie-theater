<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="theaterItemClickListener"
            type="woowacourse.movie.presentation.homefragments.movieList.listener.TheaterClickListener" />

        <variable
            name="theater"
            type="woowacourse.movie.model.Theater" />

        <variable
            name="movieId"
            type="Long" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <TextView
            android:id="@+id/item_theater_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@{@string/item_theater_name_tail(theater.name)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_div"
            tools:text="선릉" />

        <TextView
            android:id="@+id/item_theater_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_theater_name_tv"
            app:layout_constraintTop_toBottomOf="@id/item_theater_name_tv"
            android:text="@{String.valueOf(theater.findScreenScheduleListWithMovieId(movieId).size())}"
            tools:text="3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/item_screen_count_tail"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/item_theater_time_tv"
            app:layout_constraintEnd_toEndOf="@id/gl_div"
            app:layout_constraintStart_toEndOf="@id/item_theater_time_tv" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_theater_arrow_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_img"
            android:onClick="@{() -> theaterItemClickListener.onTheaterClick(theater.id, movieId)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_div"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
