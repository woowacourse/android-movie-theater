<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movie"
        tools:targetApi="31" >
        <receiver
            android:name=".alarm.AlarmReceiver"
            android:exported="true"
            android:label="booting receiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".presentation.view.bottomNavigationBar.NavigationActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.reservation.seat.SeatSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.reservation.result.ReservationResultActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.reservation.detail.MovieDetailActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.screening.ScreeningActivity"
            android:exported="true" />
    </application>

</manifest>
